<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp">
        <shape>
            <!-- 背景颜色 -->
            <solid android:color="@color/white"/>
