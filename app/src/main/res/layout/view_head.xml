<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="@dimen/chat_head_size"
    tools:layout_width="@dimen/chat_head_size">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/avatar_normal"
            android:visibility="visible"
            app:riv_border_color="@color/white"
            app:riv_corner_radius="@dimen/rounded_avatar_corner_radius"
            app:riv_oval="false"
            />
    <!--</LinearLayout>-->

    <ImageView
        android:id="@+id/ivFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        tools:src="@mipmap/frame_group_manager"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        tools:visibility="visible"
        android:id="@+id/iv_vip"
        android:layout_width="15dp"
        android:layout_height="15dp"
        tools:src="@mipmap/vip1"/>

</RelativeLayout>