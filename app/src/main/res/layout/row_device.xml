<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_list_selector_background_ripple"
    android:paddingLeft="20dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <com.iimm.miliao.view.CircleImageView
        android:id="@+id/device_ava_"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/im_notice"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/device_ava"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_normal"
        android:visibility="visible"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/device_ava"
        android:textColor="@color/Grey_3A4"
        android:textSize="@dimen/one_level_title" />

</RelativeLayout>