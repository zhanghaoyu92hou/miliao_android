<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/windowBackground"
        tools:context=".ui.activity.RedPacketListActivity">

        <include layout="@layout/toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:paddingRight="16dp"
            android:id="@+id/rl_one"
            android:background="@color/white"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="发送一对一红包"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_arrow_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/white_d0"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/rl_one"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:paddingRight="16dp"
            android:id="@+id/rl_normal"
            android:background="@color/white"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="发送普通群红包"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_arrow_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/white_d0"
            android:id="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/rl_normal"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:paddingRight="16dp"
            android:id="@+id/rl_luck"
            android:background="@color/white"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="发送手气群红包"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_arrow_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>