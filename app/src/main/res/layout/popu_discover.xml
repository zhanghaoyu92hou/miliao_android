<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/pop_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/popu_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/btn_send_picture"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/release_graphic"
        android:textColor="@color/tb_center_title_skin_simple_white"
        android:textSize="@dimen/sp_14_text_size"/>

    <View style="@style/MenuDivider"/>

    <TextView
        android:id="@+id/btn_send_voice"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/send_audio"
        android:textColor="@color/tb_center_title_skin_simple_white"
        android:textSize="@dimen/sp_14_text_size"/>

    <View style="@style/MenuDivider"/>

    <TextView
        android:id="@+id/btn_send_video"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/send_video"
        android:textColor="@color/tb_center_title_skin_simple_white"
        android:textSize="@dimen/sp_14_text_size"/>

    <View style="@style/MenuDivider"/>

    <TextView
        android:id="@+id/btn_send_file"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/public_a_file"
        android:textColor="@color/tb_center_title_skin_simple_white"
        android:textSize="@dimen/sp_14_text_size"
        android:visibility="gone"/>

    <View style="@style/MenuDivider"/>

    <TextView
        android:id="@+id/new_comment"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/latest_comments"
        android:textColor="@color/tb_center_title_skin_simple_white"
        android:textSize="@dimen/sp_14_text_size"/>

</LinearLayout>