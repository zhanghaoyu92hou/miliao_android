       是否启用特效，默认true-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/colse_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="9dp"
            android:background="@drawable/msg_list_selector_background_ripple"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:text="@string/near_cancel"
            android:textColor="@color/color_8C9AB8"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sure_btn"
            app:layout_constraintTop_toTopOf="parent"

            />

        <Button
            android:id="@+id/sure_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="9dp"
            android:background="@drawable/ok"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/colse_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>