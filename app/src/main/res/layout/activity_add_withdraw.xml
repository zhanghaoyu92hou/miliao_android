                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bank_name_et"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
