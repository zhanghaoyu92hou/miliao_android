<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f6f7fB"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/bank_card_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/msg_list_selector_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        app:divider="@drawable/line"
        app:showDividers="middle">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55">

            <TextView
                android:id="@+id/cardholders_name_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:drawableLeft="@drawable/icon_xue"
                android:gravity="center_vertical"
                android:text="@string/cardholders_name"
                android:textColor="@color/Grey_3A4"
                android:textSize="@dimen/sp_15_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/cardholders_name_et"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/cardholders_name_et"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:hint="名字"
                android:textColor="@color/Grey_3A4"
                android:textColorHint="@color/search_color_cancle"
                android:textSize="@dimen/sp_15_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintLeft_toRightOf="@+id/cardholders_name_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55">

            <TextView
                android:id="@+id/bank_card_number_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:drawableLeft="@drawable/icon_xue"
                android:gravity="center_vertical"
                android:text="@string/bank_card_number"
                android:textColor="@color/Grey_3A4"
                android:textSize="@dimen/sp_15_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bank_card_number_et"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/bank_card_number_et"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:hint="银行卡"
                android:inputType="number"
                android:textColor="@color/Grey_3A4"
                android:textColorHint="@color/search_color_cancle"
                android:textSize="@dimen/sp_15_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintLeft_toRightOf="@+id/bank_card_number_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55">

            <TextView
                android:id="@+id/bank_name_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:drawableLeft="@drawable/icon_xue"
