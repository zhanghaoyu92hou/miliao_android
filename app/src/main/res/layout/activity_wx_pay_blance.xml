<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/color_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="@dimen/dp20"
        android:background="@drawable/msg_list_selector_background_ripple">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/weixinpayyue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/my_change"
            android:textColor="@color/Grey_3A4"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_14_text_size" />

        <TextView
            android:id="@+id/myblance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:text="￥0.00"
            android:textColor="@color/Grey_3A4"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chongzhi"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ok"
            android:gravity="center"
            android:text="@string/recharge"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16_text_size" />

        <TextView
            android:id="@+id/recharge_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ok"
            android:gravity="center"
            android:text="H5充值"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16_text_size" />

        <TextView
            android:id="@+id/quxian"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/msg_list_selector_background_ripple"
            android:gravity="center"
            android:text="@string/withdraw"
            android:textColor="@color/color_8C9AB8"
            android:textSize="@dimen/sp_16_text_size"
            />

        <TextView
            android:id="@+id/tvPayPassword"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/msg_list_selector_background_ripple"
            android:gravity="center"
            android:text="@string/btn_change_pay_password"
            android:textColor="@color/color_8C9AB8"
            android:textSize="@dimen/sp_16_text_size"
            android:visibility="gone"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

</LinearLayout>
