<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="9dp"
              android:paddingTop="9dp"
              android:paddingBottom="9dp">

    <com.iimm.miliao.view.CircleImageView
        android:id="@+id/label_avatar_"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/avatar_normal"
        android:visibility="gone"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/label_avatar"
        android:layout_width="@dimen/rounded_avatar_height_small"
        android:layout_height="@dimen/rounded_avatar_height_small"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_normal"
        android:visibility="visible"
        app:riv_border_color="@color/white"
        app:riv_corner_radius="@dimen/rounded_avatar_corner_radius"
        app:riv_oval="false"/>

    <TextView
        android:id="@+id/label_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/one_level_title"/>

</LinearLayout>