<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">


    <View
        android:id="@+id/top_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/redly2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/top_v"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/msg_list_selector_background_ripple"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/sumMoneyTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/total_money"
            android:textColor="@color/tb_center_title_skin_simple_white"
            android:textSize="@dimen/sp_16_text_size"/>

        <EditText
            android:id="@+id/edit_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="0.00"
            android:inputType="number"
            android:maxLength="6"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="@color/color_96"
            android:textColorHint="@color/color_96"
            android:textSize="@dimen/sp_16_text_size"/>

        <TextView
            android:id="@+id/yuanTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="@string/rmb"
            android:textColor="@color/Grey_3A4"
            android:textSize="@dimen/sp_16_text_size"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_blessing_ly"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/redly2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/msg_list_selector_background_ripple"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/setKouLinTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="@string/red_envelope_password"
            android:textColor="@color/tb_center_title_skin_simple_white"
            android:textSize="@dimen/sp_16_text_size"/>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="@string/i_am_so_handsome"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/color_96"
            android:textColorHint="@color/color_96"
            android:textSize="@dimen/sp_16_text_size"/>

    </LinearLayout>


    <TextView
        android:id="@+id/textviewtishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_blessing_ly"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:hint="@string/hint_red_packet_key"
        android:textColor="@color/color_96"
        android:textSize="@dimen/sp_14_text_size"/>

    <TextView
        android:id="@+id/money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewtishi"
        android:text="ï¿¥0.00"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Grey_3A4"
        android:textSize="@dimen/sp_40_text_size"/>

    <Button
        android:id="@+id/btn_sendRed"
        style="@style/BossGreenBtn"
        android:layout_below="@+id/money_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:layout_height="44dp"
        android:background="@drawable/shape_red_packet"
        android:text="@string/btn_send_red_packet"
        android:textSize="@dimen/sp_16_text_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sendRed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/unclaimed_red_envelope"
        android:textColor="@color/color_96"
        android:textSize="@dimen/sp_16_text_size"
        />
</RelativeLayout>
