<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_shatup"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp25">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="@dimen/dp25"
        android:layout_marginRight="38dp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:text="撤回全部群聊天记录，执行后永久删除所有群成员设备上的聊天记录，并不可恢复。"
        android:textColor="@color/my_tab_no_select_tv_color"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/dp25"
        android:background="@color/line_color" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25">

        <Button
            android:id="@+id/cancel_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/round_withe_storek_10"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_8C9AB8"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/share"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scan_it" />

        <Button
            android:id="@+id/determine_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="9dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_bt_bg"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/save"
            app:layout_constraintTop_toTopOf="@+id/save" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
    

