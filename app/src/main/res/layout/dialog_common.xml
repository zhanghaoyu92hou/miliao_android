<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/dialog_common_bg"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17_text_size"
            android:textStyle="bold" />


        <FrameLayout
            android:id="@+id/fl_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16_text_size"
                tools:text="请确认您已向卖家付款，恶意点击将直接冻结" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@color/color_DBE0E7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <Button
                android:id="@+id/b_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/color_007EFF" />

            <View
                android:id="@+id/v_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_DBE0E7" />

            <Button
                android:id="@+id/b_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/confirm"
                android:textColor="@color/color_007EFF"
                android:textSize="@dimen/sp_17_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>