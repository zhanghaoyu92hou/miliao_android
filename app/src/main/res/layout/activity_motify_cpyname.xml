<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp12"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/round_withe_storek_10"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20">

                <TextView
                    android:id="@+id/department_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="团队名称"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Grey_3A4"
                    android:textSize="@dimen/sp_16_text_size" />

                <com.iimm.miliao.view.ClearEditText
                    android:id="@+id/department_edit"
                    style="@style/IMTbleLine_TextValue"
                    android:layout_toRightOf="@+id/department_name"
                    android:background="@null"
                    android:hint="@string/enter_new_company_name"
                    android:inputType="text"
                    android:text="" />
            </RelativeLayout>

            <Button
                android:id="@+id/create_department_btn"
                android:layout_height="44dp"
                android:layout_width="match_parent"
                android:background="@drawable/round_bt_bg"
                android:textSize="@dimen/sp_16_text_size"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp20"
                android:text="@string/sure_modify" />



</LinearLayout>