<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="192dp"
    android:layout_height="28dp"
    android:background="@drawable/main_fragment_tab_bg"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_select_bg"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:background="@drawable/my_tab_select_bg" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all"
                android:textColor="@color/my_tab_no_select_tv_color" />

            <View
                android:id="@+id/v_tab_hint1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/my_tab_dian_bg"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group"
                android:textColor="@color/my_tab_no_select_tv_color" />

            <View
                android:id="@+id/v_tab_hint2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/my_tab_dian_bg"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_friend2"
                android:textColor="@color/my_tab_no_select_tv_color" />

            <View
                android:id="@+id/v_tab_hint3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/my_tab_dian_bg"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

    </LinearLayout>


</merge>