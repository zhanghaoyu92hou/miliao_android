<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.iimm.miliao.view.MessageAvatar
        android:id="@+id/iv_recently_contacts_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/avatar_normal" />

    <TextView
        android:id="@+id/tv_recently_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/iv_recently_contacts_head"
        android:text=""
        android:textColor="@color/black"
        tools:text="卡士大夫考试的撒地方可" />


    <CheckBox
        android:id="@+id/cb_box"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/check_box_bg"
        android:button="@null" />

</RelativeLayout>