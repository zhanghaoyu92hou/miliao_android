<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="145dp"
              android:layout_height="wrap_content"
              android:background="@drawable/popu_bg"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/create_group"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp12"
        >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_creat_group"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:text="@string/create_group"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_window14"/>

    </LinearLayout>

    <View style="@style/MenuDivider"
        android:id="@+id/line_create_group"/>

    <LinearLayout
        android:id="@+id/face_group"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp12"
        >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_face_group"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:text="@string/face_to_face_group"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_window14"/>

    </LinearLayout>

    <View style="@style/MenuDivider"
        android:visibility="gone"
        android:id="@+id/line_face_group"/>

    <LinearLayout
        android:id="@+id/add_friends"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp12"
        >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_add_friend"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:text="@string/add_friends"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_window14"/>

    </LinearLayout>

    <View style="@style/MenuDivider"
        android:id="@+id/line_add_friends"/>

    <LinearLayout
        android:id="@+id/scanning"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp12">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/messaeg_scnning"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:text="@string/scanning"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_window14"/>

    </LinearLayout>

    <View style="@style/MenuDivider"
        android:id="@+id/line_scanning"/>

    <LinearLayout
        android:id="@+id/near_person"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp12"
        >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_near_person"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:text="@string/near_person"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_window14"/>

    </LinearLayout>

    <View style="@style/MenuDivider"
        android:id="@+id/line_near_person"/>

    <LinearLayout
        android:id="@+id/receipt_payment"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp12"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/messaeg_rp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:text="@string/receipt_payment"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_window14"/>

    </LinearLayout>

    <View style="@style/MenuDivider"
        android:id="@+id/line_receipt_payment"/>

    <LinearLayout
        android:id="@+id/search_public_number"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp12"
        >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_search"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="12dp"
            android:text="@string/add_a_public_number"
            android:textColor="@color/white"
            android:textSize="@dimen/pop_window14"/>

    </LinearLayout>

</LinearLayout>